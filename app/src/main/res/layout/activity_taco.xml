<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Taco"
    android:background="@color/ligh_grey">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBack_taco1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/taco_center"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/roundImageCorner"
        android:background="@color/white"


        />

    <TextView
        android:id="@+id/text_taco_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 1"
        android:textSize="25sp"
        android:textColor="@color/dark_dark"
        app:layout_constraintTop_toTopOf="@id/imgBack_taco1"
        app:layout_constraintEnd_toEndOf="@id/imgBack_taco1"
        app:layout_constraintStart_toStartOf="@id/imgBack_taco1"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/taco_center"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/imgBack_taco1"
        app:layout_constraintEnd_toEndOf="@id/imgBack_taco1"
        android:text="Zerar Placar"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/imgBack_taco1"
        app:layout_constraintBottom_toTopOf="@id/imgBack_taco2"
        android:background="@drawable/img_shape"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBack_taco2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taco_center"
        app:shapeAppearanceOverlay="@style/roundImageCorner"
        android:background="@color/dark_dark"
        android:layout_margin="10dp"


        />

    <TextView
        android:id="@+id/text_taco_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 2"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/imgBack_taco2"
        app:layout_constraintEnd_toEndOf="@id/imgBack_taco2"
        app:layout_constraintStart_toStartOf="@id/imgBack_taco2"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>