    <Button
        android:id="@+id/voley_zerar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/img_shape"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Zerar Placar"
        app:shapeAppearanceOverlay="@style/roundImageCorner"


        app:layout_constraintBottom_toTopOf="@id/imgback_voley_time2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgback_voley_time1"
         />





    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgback_voley_time2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/dark_dark"
