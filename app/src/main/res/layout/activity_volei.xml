        app:layout_constraintStart_toStartOf="@id/imgback_voley_time2"
        app:layout_constraintEnd_toStartOf="@id/pontuacao_volei_time2"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />
    <TextView
        android:id="@+id/mais1_volei_time2"
        android:layout_width="0dp"
