<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Volei"
    android:background="@color/ligh_grey">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgback_voley_time1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/voley_zerar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageCorner" />

    <TextView
        android:id="@+id/text_volei_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 1"
        android:textColor="@color/dark_dark"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/imgback_voley_time1"
        app:layout_constraintStart_toStartOf="@id/imgback_voley_time1"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time1"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/pontuacao_volei_time1"/>


    <TextView
        android:id="@+id/pontuacao_volei_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="@color/dark_dark"
        android:textSize="45sp"
        app:layout_constraintTop_toBottomOf="@id/text_volei_time1"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintBottom_toTopOf="@id/set_time1"
        app:layout_constraintStart_toEndOf="@id/menos1_volei_time1"
        app:layout_constraintEnd_toStartOf="@id/mais1_volei_time1"
        />

    <TextView
        android:id="@+id/menos1_volei_time1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="-"
        android:textColor="@color/dark_dark"
        android:textSize="45sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/pontuacao_volei_time1"


        app:layout_constraintStart_toStartOf="@id/imgback_voley_time1"
        app:layout_constraintEnd_toStartOf="@id/pontuacao_volei_time1"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />
    <TextView
        android:id="@+id/mais1_volei_time1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:gravity="center"
        android:textColor="@color/dark_dark"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="@id/pontuacao_volei_time1"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintStart_toEndOf="@id/pontuacao_volei_time1"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time1"
        />
    <TextView
        android:id="@+id/set_time1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pontuacao_volei_time1"
        android:layout_alignStart="@id/pontuacao_volei_time1"

        android:background="@drawable/img_shape"

        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="@id/imgback_voley_time1"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time1"
        app:layout_constraintHorizontal_bias="0.496"


        app:layout_constraintStart_toStartOf="@id/imgback_voley_time1"
        app:layout_constraintTop_toBottomOf="@id/pontuacao_volei_time1" />

