        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voley_zerar"
        app:shapeAppearanceOverlay="@style/roundImageCorner" />
