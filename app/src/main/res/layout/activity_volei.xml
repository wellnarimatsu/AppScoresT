        android:text="+"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintTop_toTopOf="@id/pontuacao_volei_time2"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintStart_toEndOf="@id/pontuacao_volei_time2"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time2"
        />

    <TextView
        android:id="@+id/set_time2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pontuacao_volei_time2"
        android:layout_alignStart="@id/pontuacao_volei_time2"

        android:background="@drawable/img_shape_white"

        android:gravity="center"
        android:text="0"
        android:textColor="@color/dark_dark"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="@id/imgback_voley_time2"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time2"
        app:layout_constraintHorizontal_bias="0.493"


        app:layout_constraintStart_toStartOf="@id/imgback_voley_time2"
        app:layout_constraintTop_toBottomOf="@id/pontuacao_volei_time2" />


