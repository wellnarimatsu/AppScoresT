        app:layout_constraintStart_toStartOf="@id/imgback_voley_time2"
        app:layout_constraintEnd_toEndOf="@id/imgback_voley_time2"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/pontuacao_volei_time2"

/>


    <TextView
        android:id="@+id/pontuacao_volei_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintTop_toBottomOf="@id/text_volei_time2"
        tools:layout_editor_absoluteX="193dp"
        app:layout_constraintBottom_toTopOf="@id/set_time2"
        app:layout_constraintStart_toEndOf="@id/menos1_volei_time2"
        app:layout_constraintEnd_toStartOf="@id/mais1_volei_time2"
