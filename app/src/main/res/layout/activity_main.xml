<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <ImageView

            android:id="@+id/img_futebol"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"



            android:layout_marginRight="10dp"
            android:background="@drawable/img_shape"
            android:scaleType="centerInside"
            android:src="@drawable/imagem_padrao"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_volei"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/img_shape"


            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_futebol"
            app:layout_constraintEnd_toStartOf="@id/img_tenis"/>

        <ImageView
            android:id="@+id/img_tenis"
            android:layout_width="190dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toEndOf="@id/img_volei"
            app:layout_constraintTop_toBottomOf="@id/img_futebol"
            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/img_shape"
            />
        <ImageView
            android:id="@+id/img_taco"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/img_shape"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_volei" />

        <ImageView
            android:id="@+id/img_basquete"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/img_shape"


            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_taco"
            app:layout_constraintEnd_toStartOf="@id/img_truco"/>

        <ImageView

            android:id="@+id/img_truco"
            android:layout_width="190dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toEndOf="@id/img_basquete"
            app:layout_constraintTop_toBottomOf="@id/img_taco"
            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/img_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
