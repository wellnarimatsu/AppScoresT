<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:background="@color/white"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_futebol"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="10dp"
            android:background="@drawable/img_fundo_futebol"
            android:scaleType="centerInside"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"


            app:shapeAppearanceOverlay="@style/roundImageCorner" />

        <TextView
    android:id="@+id/text_fut"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@id/img_futebol"
    app:layout_constraintBottom_toBottomOf="@id/img_futebol"
    android:text="Fut"
    android:textColor="@color/white"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="15dp"

    />




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_volei"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/imagem_fundo_volei"


            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_futebol"
            app:layout_constraintEnd_toStartOf="@id/img_tenis"

            app:shapeAppearanceOverlay="@style/roundImageCorner"

            />
        <TextView
            android:id="@+id/text_volei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img_volei"
            app:layout_constraintBottom_toBottomOf="@id/img_volei"
            android:text="Vôlei"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_tenis"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toEndOf="@id/img_volei"
            app:layout_constraintTop_toBottomOf="@id/img_futebol"
            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/imagem_fundo_tenis"
            app:shapeAppearanceOverlay="@style/roundImageCorner"
            />

        <TextView
            android:id="@+id/text_tenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img_tenis"
            app:layout_constraintBottom_toBottomOf="@id/img_tenis"
            android:text="Tênis"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_taco"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@drawable/imagem_fundo_taco"

            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundImageCorner"


            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_volei" />

        <TextView
            android:id="@+id/text_taco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img_taco"
            app:layout_constraintBottom_toBottomOf="@id/img_taco"
            android:text="Taco | Bets"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_basquete"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/img_fundo_basquete"
            app:shapeAppearanceOverlay="@style/roundImageCorner"


            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/img_futebol"
            app:layout_constraintTop_toBottomOf="@id/img_taco"
            app:layout_constraintEnd_toStartOf="@id/img_truco"/>
        <TextView
            android:id="@+id/text_basquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img_basquete"
            app:layout_constraintBottom_toBottomOf="@id/img_basquete"

            android:text="Basquete"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            />

        <com.google.android.material.imageview.ShapeableImageView

            android:id="@+id/img_truco"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toEndOf="@id/img_basquete"
            app:layout_constraintTop_toBottomOf="@id/img_taco"
            app:layout_constraintEnd_toEndOf="@id/img_futebol"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/imagem_fundo_truco"
            app:shapeAppearanceOverlay="@style/roundImageCorner"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_truco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img_truco"
            app:layout_constraintBottom_toBottomOf="@id/img_truco"
            android:text="Truco"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
