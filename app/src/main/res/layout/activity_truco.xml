<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Truco">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/img_back1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_back2"
        android:background="@color/teal_200"
        app:shapeAppearanceOverlay="@style/roundImageCorner"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80sp"
        app:layout_constraintTop_toTopOf="@id/img_back1"
        app:layout_constraintStart_toStartOf="@id/img_back1"
        app:layout_constraintBottom_toBottomOf="@id/img_back1"
        android:textColor="@color/dark_dark"/>
    <com.google.android.material.imageview.ShapeableImageView

        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:id="@+id/img_back2"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_back1"

        android:background="@color/teal_700"
        app:shapeAppearanceOverlay="@style/roundImageCorner"
        />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80sp"
        android:textColor="@color/ligh_dark"
        app:layout_constraintTop_toTopOf="@id/img_back2"
        app:layout_constraintStart_toStartOf="@id/img_back2"
        app:layout_constraintBottom_toBottomOf="@id/img_back2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>