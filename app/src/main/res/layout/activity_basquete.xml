<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Basquete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <Chronometer
            android:id="@+id/timerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_start_basquete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start"
                app:icon="@drawable/ic_play"
                android:textColor="@color/dark_dark"
                android:layout_marginEnd="10dp"
                />
            <Button
                android:id="@+id/btn_pause_basquete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pause"
                app:icon="@drawable/ic_baseline_pause_24"
                android:textColor="@color/dark_dark"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/btn_replay_basquete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset"
                app:icon="@drawable/ic_baseline_refresh_24"
                android:textColor="@color/dark_dark"
                android:layout_marginStart="10dp"
                />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>