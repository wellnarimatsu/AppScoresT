<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Futebol"
    android:background="@color/dark_background">

    <TextView
        android:id="@+id/text_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pontuacao_time1"
        android:layout_alignLeft="@id/pontuacao_time1"
        android:layout_toLeftOf="@id/contra"
        android:padding="7dp"
        android:text="Time 1"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/pontuacao_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/contra"

        android:padding="16dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/contra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="X"
        android:textSize="50dp"
        android:padding="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pontuacao_time2"
        android:layout_toRightOf="@id/contra"
        android:padding="7dp"
        android:text="Time 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pontuacao_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/contra"
        android:padding="16dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80dp" />


</RelativeLayout>